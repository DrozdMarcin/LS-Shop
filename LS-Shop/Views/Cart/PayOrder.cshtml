@model LS_Shop.Models.Order

@{
    ViewBag.Title = "Złóż zamówienie";
}

@using (Html.BeginForm("PayOrder", "Cart"))
{

    <div class="row">
        <div class="col-lg-12 col-xs-12">
            @Html.ValidationSummary()
            <table class="table">
                <thead>
                    <tr>
                        <th>Wypełnij dane do wysyłki produktów:</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>@Html.LabelFor(o => o.Email, "Email: ")</td>
                        <td>@Html.TextBoxFor(o => o.Email, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.Email, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.FirstName, "Imie: ")</td>
                        <td>@Html.TextBoxFor(o => o.FirstName, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.FirstName, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.LastName, "Nazwisko: ")</td>
                        <td>@Html.TextBoxFor(o => o.LastName, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.LastName, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.Street, "Ulica i numer domu/budynku: ")</td>
                        <td>@Html.TextBoxFor(o => o.Street, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.Street, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.City, "Miasto: ")</td>
                        <td>@Html.TextBoxFor(o => o.City, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.City, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.PostalCode, "Kod pocztowy: ")</td>
                        <td>@Html.TextBoxFor(o => o.PostalCode, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.PostalCode, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.PhoneNumber, "Telefon: ")</td>
                        <td>@Html.TextBoxFor(o => o.PhoneNumber, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(o => o.PhoneNumber, "", new { @class = "text-danger" })</td>
                    </tr>

                    <tr>
                        <td><label for="comment">Uwagi</label></td>
                        <td>
                            @Html.TextAreaFor(o => o.Comment, new { @class = "form-control" })
                        </td>
                    </tr>

                </tbody>
            </table>

            <div class="col-lg-12 col-xs-12">
                <div>
                    <td>
                        <a class="btn btn-warning" id="" href="@Url.Action("Cart","Cart")">Cofnij</a>
                        <input type="submit" class="btn btn-success" style="" value="Złóż zamówienie" />
                    </td>
                </div>
            </div>
            </div>
        </div>























}

