@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="dropdown">
            <a href="#" class="nav-link dropdown-toggle " role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="~/Images/user.png" width="30" height="30" /> Witaj, @User.Identity.Name
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a>@Html.ActionLink("Zarządzaj", "Index", "Manage" , null, new { @class = "nav-link dropdown-item" })</a>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link dropdown-item">Wyloguj</a>
            </div>
        </div>
    }
}
else
{
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Zarejestruj", "Register", new { controller = "Account" }, new { id = "registerLink", @class = "nav-link" })</li>
        <li>@Html.ActionLink("Zaloguj", "Login", new { controller = "Account" }, new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
