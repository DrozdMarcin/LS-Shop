
@{
    ViewBag.Title = "Dodawanie produktu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model LS_Shop.ViewModels.AddProductViewModel

<div class="row">
    <div class="col-xs-12">
        <h3>@ViewBag.Title</h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Nazwa:</label>
                @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Cena:</label>
                @Html.TextBoxFor(o => o.Price, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Zdjęcie:</label> <br />
                @Html.FileFor(o => o.NewFile)
            </div>
            <div class="form-group">
                <label>Kategoria:</label>
                @Html.DropDownListFor(o => o.Category, Model.Categories, "Wybierz kategorię", new { @class = "form-control" })
            </div>
            <input type="submit" value="Dodaj" class="btn btn-success" /><br /><br />
        }
        @Html.ActionLink("Powrót", "Products", new { controller = "Admin" }, new { @class = "btn btn-primary" })
    </div>
</div>

