@model LS_Shop.ViewModels.EditOrderProductViewModel
@{
    ViewBag.Title = "EditOrderProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-danger font-weight-bold text-center">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("EditOrderProduct", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(o => o.OrderId)
            @Html.HiddenFor(o => o.OrderPositionId)
            @Html.HiddenFor(o => o.ProductName)
            <div class="form-group">
                <label>Nazwa: </label>
                @Model.ProductName
            </div>
            <div class="form-group">
                <label>Ilość: </label>
                @Html.TextBoxFor(o => o.Quantity, new { @class = "form-control", type = "number" })
            </div>
            <input type="submit" value="Zapisz" class="btn btn-success" />
        }
    </div>
</div>

