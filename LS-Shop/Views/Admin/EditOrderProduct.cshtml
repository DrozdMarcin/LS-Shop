@model LS_Shop.Models.OrderPosition
@{
    ViewBag.Title = "EditOrderProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditOrderProduct", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(o => o.OrderId)
    @Html.HiddenFor(o => o.OrderPositionId)
    @Html.HiddenFor(o => o.ProductId)
    @Html.HiddenFor(o => o.PurchasePrice)
    <div class="form-group">
        <label>Nazwa: </label>
        @Model.Product.Name
    </div>
    <div class="form-group">
        <label>Ilość: </label>
        @Html.TextBoxFor(o => o.Amount, new { @class = "form-control" })
    </div>
    <input type="submit" value="Zapisz" class="btn btn-success" />
}

