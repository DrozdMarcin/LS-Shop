@model LS_Shop.Models.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h3>@ViewBag.Title</h3>
        <hr />
        @using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, new
        {
            enctype = "multipart/form-data"
        }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(o => o.CategoryId)
            @Html.HiddenFor(o => o.NameOfImage)
            
            <div class="form-group">
                <label>Nazwa:</label>
                @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Name)
            </div>
            <div class="form-group">
                <label>Opis:</label>
                @Html.TextAreaFor(o => o.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Description)
            </div>

            <input type="submit" value="Dodaj" class="btn btn-success" /><br /><br />
        }
        @Html.ActionLink("Powrót", "Products", new { controller = "Admin" }, new { @class = "btn btn-primary" })
    </div>
</div>


