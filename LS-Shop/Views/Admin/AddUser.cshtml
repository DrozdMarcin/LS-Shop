@model LS_Shop.ViewModels.AddUserViewModel
@{
    ViewBag.Title = "Dodaj użytkownika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row">
        <div class="col-xs-12">
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success font-weight-bold text-center">
                    @TempData["message"]
                </div>
            }
            <h3>@ViewBag.Title</h3>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Email:</label>
                    @Html.TextBoxFor(o => o.User.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(o => o.User.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Hasło:</label>
                    @Html.PasswordFor(o => o.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(o => o.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Rola:</label>
                    @Html.DropDownListFor(o => o.UserRoleId, new SelectList(Model.Roles, "Id", "Name"), "Wybierz rolę", new { @class = "form-control" })
                </div>
                <input type="submit" value="Dodaj" class="btn btn-success" /><br /><br />
            }
            @Html.ActionLink("Powrót", "Users", new { controller = "Admin" }, new { @class = "btn btn-primary" })
        </div>
    </div>

