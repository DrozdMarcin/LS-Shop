@model LS_Shop.Models.RegisterViewModel
@{
    ViewBag.Title = "Zarejestruj";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal was-validated", novalidate = "true" }))
{
    @Html.AntiForgeryToken()
    <h4>Utwórz nowe konto.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row form-group">
       <!-- @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" }) -->
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "true", placeholder="Podaj email"})            
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row form-group">
        <!--@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })-->
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "true", placeholder = "Podaj hasło" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row form-group">
        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "true", placeholder = "Potwierdź hasło" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Zarejestruj" />
        </div>
    </div>
}