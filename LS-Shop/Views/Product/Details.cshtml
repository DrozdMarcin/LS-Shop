@model LS_Shop.Models.Product
@using LS_Shop.Infrastructure

@{
    ViewBag.Title = "Szczegóły produktu - LS-Shop";
}

    <div class="col-xs-12 col-md-12">
        <table class="table">
            <tr>
                <th><h2>@Model.Name</h2></th>
            </tr>
            <tr>
                <td><img src="@Url.ImagesOfProductsPath(Model.NameOfImage)" class="img-fluid"/></td>
            </tr>
            <tr>
                <td><p class="text-justify">@Model.Description</p></td>
            </tr>
        </table>
        <b>Cena: @Model.Price.ToString("c")</b><br /><br />
        <b>Dostępność: </b>
        @if (!Model.Hidden)
        {
            @:W magazynie<br /><br />
            @Html.ActionLink("Dodaj do koszyka", "AddToCart", new { controller = "Cart", productId = Model.ProductId }, new { @class = "btn btn-primary" })
        }
        else
        {
            <p>Produkt niedostępny</p>
        }
    </div>

