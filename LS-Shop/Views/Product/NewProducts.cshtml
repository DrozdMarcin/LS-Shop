@model LS_Shop.ViewModels.NewProductsViewModel
@using LS_Shop.Infrastructure
@{
    int counter = 0;
}

<h3 class="text-center">Nowości</h3> <br />
<div class="bd-example d-flex flex-row justify-content-center">
    <div id="carouselExampleCaptions" class="carousel slide col-xs-12 col-md-8 col-lg-5" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Products.Count(); i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleCaptions" data-slide-to=@i class="bg-dark active"></li>
                }
                <li data-target="#carouselExampleCaptions" class="bg-dark" data-slide-to=@i></li>
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var element in Model.Products)
            {
                if (counter == 0)
                {
                    <div class="carousel-item active">
                        <a href="@Url.Action("Details", new { controller = "Product", productId = element.ProductId })">
                            <img src="@Url.ImagesOfProductsPath(element.NameOfImage)" class="d-block-block w-100 img-fluid" />
                        </a>
                        <div class="carousel-caption d-none d-md-block" style="color:black">
                            <h3><b>@element.Name</b></h3>
                            <h5><b>@element.Price.ToString("c")</b></h5>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <a href="@Url.Action("Details", new { controller = "Product", productId = element.ProductId })">
                            <img src="@Url.ImagesOfProductsPath(element.NameOfImage)" , class="d-block-block w-100 img-fluid" />
                        </a>
                        <div class="carousel-caption d-none d-md-block" style="color:black">
                            <h4><b>@element.Name</b></h4>
                            <p><b>@element.Price.ToString("c")</b></p>
                        </div>
                    </div>
                }
                counter++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>